generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  email    String   @unique
  name     String?
  password String
  role     Role     @default(USER)
  posts    News []
}

enum Role {
  USER
  ADMIN
}

model News  {
  id        String   @id @default(cuid())
  title     String
  content   String
  published Boolean  @default(false)
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
}

model Paintings {
  id        String   @id @default(cuid()) 
  title     String   @unique
  image     String
  content   String?
  isOOAK    Boolean  @default(true)
  type      String
  size      String
  isFramed  Boolean  @default(false)
  category  Category[]
  artmajeur_link String?
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  paintings Paintings[]
}

model ContactForm {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}
