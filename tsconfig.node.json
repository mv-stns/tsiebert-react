{
	"compilerOptions": {
		"composite": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@app/*": ["./app/*"],
			"@assets/*": ["./assets/*"],
			"@components/*": ["./components/*"],
			"@views/*": ["./views/*"],
			"@styles/*": ["./styles/*"],
			"@utils/*": ["./utils/*"]
		},
		"types": ["node", "vite/client"],
	},
	"include": ["vite.config.ts", "env.d.ts"]
}
